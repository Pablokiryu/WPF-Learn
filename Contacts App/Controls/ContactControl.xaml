<UserControl x:Class="Contacts_App.Controls.ContactControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Contacts_App.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="300">
    <Grid Background="#55e5e5e5">
        <StackPanel Margin="5" >
            <TextBlock x:Name="nameTextBlock" Text="Name placeholder" FontSize="20" FontWeight="Bold"/>
            <TextBlock x:Name="emailTextBlock" Text="Email placeholder" FontSize="15" Foreground="DodgerBlue"/>
            <TextBlock x:Name="phoneTextBlock" Text="Phone placeholder" FontSize="15" FontStyle="Italic"/>
        </StackPanel>
    </Grid>
</UserControl>
